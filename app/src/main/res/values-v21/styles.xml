<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@android:color/transparent</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/gray2</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent_material_dark</item>
        <item name="android:windowBackground">@drawable/ogrito</item>
        <!--  Cor de fundo da barra de navegacao-->
        <item name="android:navigationBarColor">@color/gray3</item>
    </style>

    <style name="FrameGrid" parent="AppTheme">
        <!--<item name="android:background">@color/green_fart</item>-->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>